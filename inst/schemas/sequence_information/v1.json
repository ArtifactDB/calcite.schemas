{
    "$id": "sequence_information/v1.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "_attributes": {
        "format": "text/csv",
        "restore": {
            "R": "alabaster.ranges::loadSeqinfo"
        }
    },
    "additionalProperties": false,
    "allOf": [
        {
            "if": {
                "properties": {
                    "is_child": {
                        "const": true
                    }
                }
            },
            "then": {
                "required": [
                    "title",
                    "description",
                    "maintainers",
                    "species",
                    "genome",
                    "origin",
                    "bioc_version"
                ]
            }
        }
    ],
    "description": "Sequence information for custom genomic ranges. This is a CSV file containing a data frame with one row per reference sequence in the custom annotation. It has at least the columns `seqnames`, `seqlengths`, `isCircular`, and `genome`. All columns can be interpreted as strings except for `isCircular`, which contains boolean values. The CSV layout should follow the standards described at https://github.com/LTLA/comservatory.",
    "properties": {
        "$schema": {
            "description": "The schema to use.",
            "type": "string"
        },
        "bioc_version": {
            "description": "Version of Bioconductor used to generate this resource.",
            "pattern": "^[0-9]+\\.[0-9]+$",
            "type": "string"
        },
        "description": {
            "description": "Description of the resource.",
            "type": "string"
        },
        "genome": {
            "description": "UCSC, Ensembl or other genome builds involved in generating this resource.",
            "items": {
                "properties": {
                    "id": {
                        "description": "Identifier for this genome build.",
                        "examples": [
                            "mm10",
                            "NCBIm37"
                        ],
                        "type": "string"
                    },
                    "source": {
                        "description": "Source of the genome build identifier.",
                        "enum": [
                            "Ensembl",
                            "UCSC",
                            "Wormbase",
                            "Flybase"
                        ],
                        "type": "string"
                    }
                },
                "required": [
                    "id",
                    "source"
                ],
                "type": "object"
            },
            "type": "array"
        },
        "is_child": {
            "default": false,
            "description": "Is this a child document, only to be interpreted in the context of the parent document from which it is linked? This may have implications for search and metadata requirements.",
            "type": "boolean"
        },
        "maintainers": {
            "description": "Maintainers of this resource.",
            "items": {
                "properties": {
                    "email": {
                        "description": "Email of the maintainer.",
                        "pattern": "^[^@]+@[^@]+$",
                        "type": "string"
                    },
                    "name": {
                        "description": "Name of the maintainer.",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "type": "array"
        },
        "md5sum": {
            "description": "MD5 checksum for the file.",
            "type": "string"
        },
        "origin": {
            "description": "Origins of this resource.",
            "items": {
                "allOf": [
                    {
                        "if": {
                            "properties": {
                                "source": {
                                    "const": "PubMed"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "id": {
                                    "pattern": "^[0-9]+$"
                                }
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "source": {
                                    "const": "GEO"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "id": {
                                    "pattern": "^GSE[0-9]+$"
                                }
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "source": {
                                    "const": "ArrayExpress"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "id": {
                                    "pattern": "^E-MTAB-[0-9]+$"
                                }
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "source": {
                                    "const": "DOI"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "id": {
                                    "pattern": "^[0-9a-zA-Z\\._-]+/[0-9a-zA-Z\\._-]+$"
                                }
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "source": {
                                    "const": "URI"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "id": {
                                    "pattern": "^(http|ftp|https|s3|sftp)://"
                                }
                            }
                        }
                    }
                ],
                "properties": {
                    "id": {
                        "description": "Identifier for the resource in the specified `type`.",
                        "type": "string"
                    },
                    "source": {
                        "description": "Source database or repository.",
                        "enum": [
                            "PubMed",
                            "GEO",
                            "ArrayExpress",
                            "DOI",
                            "URI"
                        ],
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "type": "array"
        },
        "path": {
            "description": "Path to the file in the project directory.",
            "type": "string"
        },
        "sequence_information": {
            "additionalProperties": false,
            "properties": {
                "compression": {
                    "description": "Type of compression applied to the file.",
                    "enum": [
                        "none",
                        "gzip",
                        "bzip2"
                    ],
                    "type": "string"
                },
                "dimensions": {
                    "description": "Dimensions of a two-dimensional object.",
                    "items": {
                        "type": "integer"
                    },
                    "maxItems": 2,
                    "minItems": 2,
                    "type": "array"
                }
            },
            "required": [
                "compression",
                "dimensions"
            ],
            "type": "object"
        },
        "species": {
            "description": "NCBI taxonomy IDs of the species involved in this resource.",
            "items": {
                "type": "integer"
            },
            "minimum": 1,
            "type": "array"
        },
        "title": {
            "description": "Title of the resource.",
            "type": "string"
        }
    },
    "required": [
        "$schema",
        "md5sum",
        "path",
        "sequence_information"
    ],
    "title": "Sequence information",
    "type": "object"
}
