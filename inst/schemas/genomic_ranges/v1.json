{
    "$id": "genomic_ranges/v1.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "_attributes": {
        "format": "text/csv",
        "restore": {
            "R": "alabaster.ranges::loadGRanges"
        }
    },
    "additionalProperties": false,
    "allOf": [
        {
            "if": {
                "properties": {
                    "is_child": {
                        "const": true
                    }
                }
            },
            "then": {
                "required": [
                    "title",
                    "description",
                    "maintainers",
                    "species",
                    "genome",
                    "origin",
                    "bioc_version"
                ]
            }
        }
    ],
    "description": "Genomic ranges, stored as a data frame inside a CSV file. Each row of the data frame corresponds to a genomic range. The data frame should contain at least the columns `seqnames` (character), `start` (integer), `end` (integer), and `strand` (character). If the `genomic_ranges.names` property is present, the first column of the CSV file contains the names of the ranges. The CSV file should comply with the [**comservatory** specification](https://github.com/LTLA/comservatory).",
    "properties": {
        "$schema": {
            "description": "The schema to use.",
            "type": "string"
        },
        "bioc_version": {
            "description": "Version of Bioconductor used to generate this resource.",
            "pattern": "^[0-9]+\\.[0-9]+$",
            "type": "string"
        },
        "description": {
            "description": "Description of the resource.",
            "type": "string"
        },
        "genome": {
            "description": "UCSC, Ensembl or other genome builds involved in generating this resource.",
            "items": {
                "properties": {
                    "id": {
                        "description": "Identifier for this genome build.",
                        "examples": [
                            "mm10",
                            "NCBIm37"
                        ],
                        "type": "string"
                    },
                    "source": {
                        "description": "Source of the genome build identifier.",
                        "enum": [
                            "Ensembl",
                            "UCSC",
                            "Wormbase",
                            "Flybase"
                        ],
                        "type": "string"
                    }
                },
                "required": [
                    "id",
                    "source"
                ],
                "type": "object"
            },
            "type": "array"
        },
        "genomic_ranges": {
            "additionalProperties": false,
            "properties": {
                "compression": {
                    "description": "Type of compression applied to the file.",
                    "enum": [
                        "none",
                        "gzip",
                        "bzip2"
                    ],
                    "type": "string"
                },
                "length": {
                    "description": "Number of entries.",
                    "type": "integer"
                },
                "names": {
                    "default": false,
                    "description": "Whether the ranges are named. If `true`, the first column of CSV contains the names of the individual ranges.",
                    "type": "boolean"
                },
                "other_data": {
                    "description": "Location of additional metadata for this object, typically stored as a list (via the `basic_list` schema).",
                    "properties": {
                        "resource": {
                            "_children": {
                                "contains": [
                                    "basic_list"
                                ]
                            },
                            "properties": {
                                "path": {
                                    "description": "Relative path of the resource from the root of the project directory.",
                                    "type": "string"
                                },
                                "type": {
                                    "description": "Type of file. Local files should be present in the same project directory.",
                                    "enum": [
                                        "local"
                                    ],
                                    "type": "string"
                                }
                            },
                            "required": [
                                "type",
                                "path"
                            ],
                            "type": "object"
                        }
                    },
                    "required": [
                        "resource"
                    ],
                    "type": "object"
                },
                "range_data": {
                    "description": "Location of additional annotations for each genomic range. If omitted, no additional annotations are present.",
                    "properties": {
                        "resource": {
                            "_children": {
                                "contains": [
                                    "data_frame"
                                ]
                            },
                            "properties": {
                                "path": {
                                    "description": "Relative path of the resource from the root of the project directory.",
                                    "type": "string"
                                },
                                "type": {
                                    "description": "Type of file. Local files should be present in the same project directory.",
                                    "enum": [
                                        "local"
                                    ],
                                    "type": "string"
                                }
                            },
                            "required": [
                                "type",
                                "path"
                            ],
                            "type": "object"
                        }
                    },
                    "required": [
                        "resource"
                    ],
                    "type": "object"
                },
                "sequence_information": {
                    "description": "Location of the file containing the sequence information.",
                    "properties": {
                        "resource": {
                            "_children": {
                                "contains": [
                                    "sequence_information"
                                ]
                            },
                            "properties": {
                                "path": {
                                    "description": "Relative path of the resource from the root of the project directory.",
                                    "type": "string"
                                },
                                "type": {
                                    "description": "Type of file. Local files should be present in the same project directory.",
                                    "enum": [
                                        "local"
                                    ],
                                    "type": "string"
                                }
                            },
                            "required": [
                                "type",
                                "path"
                            ],
                            "type": "object"
                        }
                    },
                    "required": [
                        "resource"
                    ],
                    "type": "object"
                }
            },
            "required": [
                "compression",
                "length",
                "sequence_information"
            ],
            "type": "object"
        },
        "is_child": {
            "default": false,
            "description": "Is this a child document, only to be interpreted in the context of the parent document from which it is linked? This may have implications for search and metadata requirements.",
            "type": "boolean"
        },
        "maintainers": {
            "description": "Maintainers of this resource.",
            "items": {
                "properties": {
                    "email": {
                        "description": "Email of the maintainer.",
                        "pattern": "^[^@]+@[^@]+$",
                        "type": "string"
                    },
                    "name": {
                        "description": "Name of the maintainer.",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "type": "array"
        },
        "md5sum": {
            "description": "MD5 checksum for the file.",
            "type": "string"
        },
        "origin": {
            "description": "Origins of this resource.",
            "items": {
                "allOf": [
                    {
                        "if": {
                            "properties": {
                                "source": {
                                    "const": "PubMed"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "id": {
                                    "pattern": "^[0-9]+$"
                                }
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "source": {
                                    "const": "GEO"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "id": {
                                    "pattern": "^GSE[0-9]+$"
                                }
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "source": {
                                    "const": "ArrayExpress"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "id": {
                                    "pattern": "^E-MTAB-[0-9]+$"
                                }
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "source": {
                                    "const": "DOI"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "id": {
                                    "pattern": "^[0-9a-zA-Z\\._-]+/[0-9a-zA-Z\\._-]+$"
                                }
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "source": {
                                    "const": "URI"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "id": {
                                    "pattern": "^(http|ftp|https|s3|sftp)://"
                                }
                            }
                        }
                    }
                ],
                "properties": {
                    "id": {
                        "description": "Identifier for the resource in the specified `type`.",
                        "type": "string"
                    },
                    "source": {
                        "description": "Source database or repository.",
                        "enum": [
                            "PubMed",
                            "GEO",
                            "ArrayExpress",
                            "DOI",
                            "URI"
                        ],
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "type": "array"
        },
        "path": {
            "description": "Path to the file in the project directory.",
            "type": "string"
        },
        "species": {
            "description": "NCBI taxonomy IDs of the species involved in this resource.",
            "items": {
                "type": "integer"
            },
            "minimum": 1,
            "type": "array"
        },
        "title": {
            "description": "Title of the resource.",
            "type": "string"
        }
    },
    "required": [
        "$schema",
        "genomic_ranges",
        "md5sum",
        "path"
    ],
    "title": "Genomic Ranges",
    "type": "object"
}
