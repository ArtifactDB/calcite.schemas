{
    "$id": "basic_list/v1.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "_attributes": {
        "format": "application/json",
        "restore": {
            "R": "alabaster.base::loadBaseList"
        }
    },
    "additionalProperties": false,
    "allOf": [
        {
            "if": {
                "properties": {
                    "is_child": {
                        "const": true
                    }
                }
            },
            "then": {
                "required": [
                    "title",
                    "description",
                    "maintainers",
                    "species",
                    "genome",
                    "origin",
                    "bioc_version"
                ]
            }
        }
    ],
    "description": "A basic list stored in JSON format as an array (unnamed) or object (named). Every data element consists of an object with the `type` property, specifying the type (i.e., `integer`, `number`, `string`, `boolean`, `factor`, `ordered`, `date` or `other`). Objects with non-`other` types have a `values` property containing the actual value of the element. Objects of `other` type have a `index` property specifying the 0-based index of `children` to use for this element. `factor` and `ordered` objects have a `levels` property containing a string array of levels. See https://github.com/LTLA/uzuki for more details.",
    "properties": {
        "$schema": {
            "description": "The schema to use.",
            "type": "string"
        },
        "basic_list": {
            "additionalProperties": false,
            "properties": {
                "children": {
                    "description": "Child resources referenced from this list, for nested objects of type `other`.",
                    "items": {
                        "properties": {
                            "resource": {
                                "properties": {
                                    "path": {
                                        "description": "Relative path of the resource from the root of the project directory.",
                                        "type": "string"
                                    },
                                    "type": {
                                        "description": "Type of file. Local files should be present in the same project directory.",
                                        "enum": [
                                            "local"
                                        ],
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "type",
                                    "path"
                                ],
                                "type": "object"
                            }
                        },
                        "required": [
                            "resource"
                        ],
                        "type": "object"
                    },
                    "type": "array"
                },
                "compression": {
                    "description": "Type of compression applied to the file.",
                    "enum": [
                        "none",
                        "gzip",
                        "bzip2"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "children",
                "compression"
            ],
            "type": "object"
        },
        "bioc_version": {
            "description": "Version of Bioconductor used to generate this resource.",
            "pattern": "^[0-9]+\\.[0-9]+$",
            "type": "string"
        },
        "description": {
            "description": "Description of the resource.",
            "type": "string"
        },
        "genome": {
            "description": "UCSC, Ensembl or other genome builds involved in generating this resource.",
            "items": {
                "properties": {
                    "id": {
                        "description": "Identifier for this genome build.",
                        "examples": [
                            "mm10",
                            "NCBIm37"
                        ],
                        "type": "string"
                    },
                    "source": {
                        "description": "Source of the genome build identifier.",
                        "enum": [
                            "Ensembl",
                            "UCSC",
                            "Wormbase",
                            "Flybase"
                        ],
                        "type": "string"
                    }
                },
                "required": [
                    "id",
                    "source"
                ],
                "type": "object"
            },
            "type": "array"
        },
        "is_child": {
            "default": false,
            "description": "Is this a child document, only to be interpreted in the context of the parent document from which it is linked? This may have implications for search and metadata requirements.",
            "type": "boolean"
        },
        "maintainers": {
            "description": "Maintainers of this resource.",
            "items": {
                "properties": {
                    "email": {
                        "description": "Email of the maintainer.",
                        "pattern": "^[^@]+@[^@]+$",
                        "type": "string"
                    },
                    "name": {
                        "description": "Name of the maintainer.",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "type": "array"
        },
        "md5sum": {
            "description": "MD5 checksum for the file.",
            "type": "string"
        },
        "origin": {
            "description": "Origins of this resource.",
            "items": {
                "allOf": [
                    {
                        "if": {
                            "properties": {
                                "source": {
                                    "const": "PubMed"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "id": {
                                    "pattern": "^[0-9]+$"
                                }
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "source": {
                                    "const": "GEO"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "id": {
                                    "pattern": "^GSE[0-9]+$"
                                }
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "source": {
                                    "const": "ArrayExpress"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "id": {
                                    "pattern": "^E-MTAB-[0-9]+$"
                                }
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "source": {
                                    "const": "DOI"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "id": {
                                    "pattern": "^[0-9a-zA-Z\\._-]+/[0-9a-zA-Z\\._-]+$"
                                }
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "source": {
                                    "const": "URI"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "id": {
                                    "pattern": "^(http|ftp|https|s3|sftp)://"
                                }
                            }
                        }
                    }
                ],
                "properties": {
                    "id": {
                        "description": "Identifier for the resource in the specified `type`.",
                        "type": "string"
                    },
                    "source": {
                        "description": "Source database or repository.",
                        "enum": [
                            "PubMed",
                            "GEO",
                            "ArrayExpress",
                            "DOI",
                            "URI"
                        ],
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "type": "array"
        },
        "path": {
            "description": "Path to the file in the project directory.",
            "type": "string"
        },
        "species": {
            "description": "NCBI taxonomy IDs of the species involved in this resource.",
            "items": {
                "type": "integer"
            },
            "minimum": 1,
            "type": "array"
        },
        "title": {
            "description": "Title of the resource.",
            "type": "string"
        }
    },
    "required": [
        "$schema",
        "basic_list",
        "md5sum",
        "path"
    ],
    "title": "Basic list",
    "type": "object"
}
